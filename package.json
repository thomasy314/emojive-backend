{
  "name": "emojive-backend",
  "version": "0.0.2",
  "main": "app.js",
  "scripts": {
    "docker-dev": "docker compose -f docker-compose.dev.yml up",
    "docker-dev-build": "docker compose -f docker-compose.dev.yml up --build",
    "docker-prod": "docker compose -f docker-compose.prod.yml up --build --detach ; echo Prod Started!",
    "dev": "npm run build && (tsc -w & node --watch --env-file=.env dist/app.js)",
    "start": "npm run build && node --watch --env-file=.env dist/app.js",
    "build": "rimraf dist && tsc",
    "lint": "npx eslint src/**/*.ts",
    "format-check": "prettier \"**/*.+(js|ts|json)\" --check",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && eslint src/**/*.ts --fix",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky",
    "test": "jest --passWithNoTests",
    "test-ci": "jest --ci --coverage --passWithNoTests"
  },
  "keywords": [],
  "author": "Thomas Young",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.1",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "rimraf": "^6.0.1",
    "ws": "^8.18.0"
  }
}
