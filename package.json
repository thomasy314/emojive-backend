{
  "name": "emojive-backend",
  "version": "0.0.2",
  "main": "app.js",
  "scripts": {
    "docker:dev": "docker compose -f compose.core.yml -f compose.dev.yml up",
    "docker:dev:build": "docker compose -f compose.core.yml -f compose.dev.yml up --build",
    "docker:prod:build": "docker compose -f compose.core.yml -f compose.prod.build.yml up --build",
    "docker:prod:deploy": "docker compose -f compose.core.yml -f compose.prod.deploy.yml up -d",
    "build": "rimraf dist && tsc",
    "dev": "npm run build && (tsc -w & node --watch --env-file=.env dist/app.js)",
    "start": "npm run build && node --watch --env-file=.env dist/app.js",
    "lint": "npx eslint src/**/*.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && eslint src/**/*.ts --fix",
    "format-check": "prettier \"**/*.+(js|ts|json)\" --check",
    "test": "jest",
    "test-ci": "jest --ci"
  },
  "keywords": [],
  "author": "Thomas Young",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/language-tags": "^1.0.4",
    "@types/node": "^22.5.1",
    "@types/node-emoji": "^1.8.2",
    "@types/pg": "^8.11.8",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "express": "^4.21.0",
    "kafkajs": "^2.2.4",
    "language-tags": "^1.0.9",
    "node-emoji": "^2.1.3",
    "pg": "^8.12.0",
    "rimraf": "^6.0.1",
    "ws": "^8.18.0"
  }
}
